<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Reading Mentor - {title}</title>

    <link href="stylesheets/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="stylesheets/bootstrap/bootstrap-theme.min.css" rel="stylesheet">
    <script src="javascripts/jquery-1.11.0.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="javascripts/bootstrap/bootstrap.min.js"></script>
    {+head/}
  </head>

  <body>
  <div class="container">

    <nav class="navbar navbar-inverse navbar-static-top" role="navigation" id="top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#home-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Reading Mentor</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="home-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <!-- <li class="active"><a href="#">Home</a></li> -->
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/register">Register</a></li>
          </ul>
          
          {! <form class="navbar-form navbar-right" role="form">
              <div class="form-group">
                  <input type="text" class="form-control" placeholder="Email">
              </div>
              <div class="form-group">
                  <input type="password" class="form-control" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-success">Sign In</button>
          </form> !}
          <ul class="nav navbar-nav navbar-right">
          <li><a href="/login">Sign In</a></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    {+content}
    Content Comes in Here
    {/content}
    <footer>
      <div class="footer">
        <!-- <div class="container"> -->
          <p class="text-muted">This is the footer <a href="#top">Back to Top</a></p>
          
        <!-- </div> -->
      </div>
    </footer>
  </div>  
  </body>
</html>